{
    "rules": [
        {
            "name": "Move Email from Hotmail in Spam Folder",
            "conditions": {
                "operator": "ANY",
                "rules": [
                    {
                        "field": "body",
                        "predicate": "Contains",
                        "value": "alert"
                    },
                    {
                        "field": "from_email",
                        "predicate": "Contains",
                        "value": "hotmail"
                    }
                ]
            },
            "actions": [
                {
                    "type": "mark_as_unread"
                }
            ]
        }
    ]
}
